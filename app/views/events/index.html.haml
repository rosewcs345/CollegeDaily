%h1 Listing events        

%table
  %thead
    %tr
      %th Title
      %th Host
      %th Location
      %th Description
      %th Date
      %th Start time
      %th End time
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.host
        %td= event.location
        %td= event.description
        %td= event.date
        %td= event.start_time
        %td= event.end_time
        %td= link_to 'Details and Sign Up', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }

%br

