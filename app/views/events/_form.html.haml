= form_for(@event) do |f|
  .container-fluid.createEvent
    - if @event.errors.any?
      #error_explanation
        %h2
          = pluralize(@event.errors.count, "error")
          prohibited this event from being saved:
        %ul
          - @event.errors.full_messages.each do |message|
            %li= message
    .row.field
      .col.col-sm-6
        = f.label :title
      .col.col-sm-6
        = f.text_field :title
    .row.field
      .col.col-sm-6
        = f.select :category, [["Study Event", "Study Event"], ["Club Event", "Club Event"], ["Activity Event", "Activity Event"]], {:onChange=>"showDiv(this);"}
    .row.field
      .col.col-sm-6
        = f.label :host
      .col.col-sm-6
        = f.text_field :host, value: @user.name
    .row.field
      .col.col-sm-6
        = f.label :date
      .col.col-sm-6
        = f.date_select :date, max: Date.today
    .row.field
      .col.col-sm-6
        = f.label :start_time
      .col.col-sm-6
        = f.time_select :start_time, {:ampm => true}
    .row.field
      .col.col-sm-6
        = f.label :end_time
      .col.col-sm-6
        = f.time_select :end_time, {:ampm => true}
    .row.field
      .col.col-sm-6
        = f.label :location
      .col.col-sm-6
        = f.text_field :location
    .row.field
      .col.col-sm-6
        = f.label :description
      .col.col-sm-6
        = f.text_area :description
    .row.field
      #study_event_form.hide
        .col.col-sm-6
          %p <Add Study Event Fields Here>
      #club_event_form.hide
        .col.col-sm-6
          %p <Add Event Event Fields Here>
      .col.col-sm-6
        = f.label :location
      .col.col-sm-6
        = f.text_field :location
      #activity_event_form.hide
        .col.col-sm-6
          %p <Add Activity Event Fields Here>
    .row.actions
      .col.col-sm-12
        = f.submit
