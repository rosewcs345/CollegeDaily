= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :event_type
    %br/
    /
    = f.select(:event_type, options_for_select([["Study Event", "Study Event"], ["Club Event", "Club Event"], ["Activity Event", "Activity Event"]]), {:include_blank => 'Choose an event type ...' }, :onchange => "showDiv(this);")
  .field
    = f.label :host
    %br/
    = f.text_field :host
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .field
    = f.label :start_time
    %br/
    = f.time_select :start_time
  .field
    = f.label :end_time
    %br/
    = f.time_select :end_time
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .field
    = f.label :description
    %br/
    = f.text_area :description
  #study_event_form.hide
    %p I was a hidden study event form
  #club_event_form.hide
    %p I was a hidden club event form
  #activity_event_form.hide
    %p I was a hidden activity event form
    
  .actions
    = f.submit nil, class: 'submit_btn'
