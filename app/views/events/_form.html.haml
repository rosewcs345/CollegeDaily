
= form_for @event do |f|
  = f.hidden_field :user_id, { :value => @user.id }
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :host
    = f.text_field :host
    .field
    = f.label :category
    = f.select :category, [ 'Study Session','B-Line','Outdoor Adventures' ], :prompt => 'Select One'    
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :start_time
    = f.time_select :start_time
  .field
    = f.label :end_time
    = f.time_select :end_time
  .actions
    = f.submit 'Save'
        