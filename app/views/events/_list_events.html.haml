.events.container-fluid
  .row.top
    %h1.eventsHeader Events
  .row.top
    %table.table
      %thead
        %tr
          %th{:scope => "col"} Title
          %th{:scope => "col"} Host
          %th{:scope => "col"} Date
          %th{:scope => "col"} Start time
          %th{:scope => "col"} End time
          %th{:scope => "col"} Location
          %th{:scope => "col"} Description
          %th{:colspan => "3"}
      %tbody
        - @events.each do |event|
          %tr
            %td= event.title
            %td= event.host
            %td= event.date
            %td= event.start_time_string
            %td= event.end_time_string
            %td= event.location
            %td= event.description
            %td= link_to 'Show', event
            %td= link_to 'Edit', edit_event_path(event)
            %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
  .row.top
    = link_to 'New Event', new_event_path